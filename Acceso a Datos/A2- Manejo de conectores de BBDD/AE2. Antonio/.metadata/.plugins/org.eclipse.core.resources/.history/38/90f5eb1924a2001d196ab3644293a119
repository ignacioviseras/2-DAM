import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;


import es.edix.modelo.entidad.Coche;
import es.edix.modelo.persistencia.SqlDaoImpl;

public class CocheController {
	
	public static final Scanner scanner = new Scanner(System.in);
	
	public static String nextLine() {
		return scanner.nextLine();
		
	}	
	
		
	//creamos un main con el menu:
	
			public static void main(String[] args) {
				 Scanner scanner = new Scanner(System.in);
				System.out.println("===========Iniciando Aplicacion============");
				Boolean continua = true;
				SqlDaoImpl cocheDao = new SqlDaoImpl();
				
				
				
				while (continua == true) {
					
					System.out.println("1. Añadir nuevo coche\n" + "2. Borrar coche por id\n"
							+ "3. Consulta coche por id\n" + "4. Listado de coches\n"
							+ "5. Exportar coches a archivo CSV\n" + "6. Terminar el programa\n" );
					String opcion = scanner.nextLine();
					if(opcion.equals("1")) {//Añadir coche
						Coche p= new Coche();
						
						System.out.println("-----------Escribe la matrícula: ----------");
						String nuevo = scanner.nextLine();
						p.setMatricula(nuevo);
						System.out.println("-----------Escribe el color: ----------");
						String nuevo2 = scanner.nextLine();
						p.setColor(nuevo2);
						System.out.println("-----------Escribe la marca: ----------");
						String nuevo3 = scanner.nextLine();
						p.setMarca(nuevo3);
						System.out.println("-----------Escribe el modelo: ----------");
						String nuevo4 = scanner.nextLine();
						p.setModelo(nuevo4);
						cocheDao.newCar( p);
					}else if(opcion.equals("2")) {//Borrar coche
						Coche p= new Coche();
						List<Coche> listaCoches = new ArrayList();
						
						System.out.println("-----------Escribe el ID: ----------");
						int scaux = scanner.nextInt();
						
						p.setId(scaux);
					listaCoches.contains(p);
					
						
					}else if(opcion.equals("3")) {//Buscar coche
						
					}else if(opcion.equals("4")) {//Listar coche
						ArrayList lista = new ArrayList<Coche>();
						ArrayList listaAux = new ArrayList<Coche>();
						System.out.println("-----------Escribe el ID: ----------");
						int scaux = scanner.nextInt();
						
				        for(Coche coche : cocheDao.listOb()){//recorremos toda la lista de eventos
				            if(coche.getId() == (scaux)) {//buscando si esta activo
				                listaAux.add(coche);//de ser asi añadimos todo el evento a la lista auxiliar creada al principio
				            }
				        }
				        
					}else if(opcion.equals("5")) {//Exportar a .csv
						
					}else if(opcion.equals("6")) {//terminamos la ejecucion del programa y exportamos datos a .dat
						
						continua = false;
					}
					
				}
			}
			

}
